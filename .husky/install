#!/usr/bin/env sh
echo "ğŸ”§ Installing Husky git hooks..."

# Make sure we're in a git repository
if [ ! -d ".git" ]; then
    echo "âŒ Not a git repository. Please run 'git init' first."
    exit 1
fi

# Make sure husky is installed
if ! command -v husky &> /dev/null; then
    echo "âŒ Husky is not installed. Please run 'npm install --save-dev husky' first."
    exit 1
fi

# Install husky
husky install

echo "âœ… Husky git hooks installed successfully!"
echo ""
echo "Available hooks:"
echo "  ğŸ“ pre-commit  - Runs before each commit"
echo "  ğŸ“ commit-msg  - Validates commit message format"
echo "  ğŸš€ pre-push    - Runs before each push"
echo ""
echo "To disable a hook, remove the corresponding file from .husky/"
echo "To modify a hook, edit the corresponding file in .husky/"
